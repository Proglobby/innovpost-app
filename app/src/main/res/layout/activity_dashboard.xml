<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="APP NAME"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/dashboardGrid"
        android:textSize="50sp"
        android:id="@+id/profileHolder"
        android:background="@drawable/profile_bg"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:src="@drawable/profile_user"
            android:id="@+id/profilePic"
            />

        <TextView
            android:id="@+id/NameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meram Tadjine"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/profilePic"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/ccpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05230923"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/profilePic"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/NameText"
            />
    </RelativeLayout>
    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/settings"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"

        />
    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="60dp"
        android:layout_above="@id/featuresTitle"
        android:id="@+id/straightLine"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_above="@id/dashboardGrid"
        android:layout_centerHorizontal="true"
        android:id="@+id/featuresTitle"
        android:textStyle="bold"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/dashboardGrid"
        android:background="@color/white"
        android:layout_marginHorizontal="26dp"
    >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:layout_rowWeight="1"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:src="@drawable/item_bg"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="60dp"
                        />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/scanner" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scanner"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:layout_columnWeight="1"

            android:id="@+id/TicketsCard"
            app:cardCornerRadius="20dp"
                android:layout_rowWeight="1"
            app:cardElevation="0dp">
            >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:src="@drawable/item_bg"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="60dp"
                        />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/tickets" />
                </RelativeLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Tickets"

                    android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
            android:id="@+id/CrowdCard"
            app:cardCornerRadius="20dp"
                android:layout_rowWeight="1"

            app:cardElevation="0dp"
                android:layout_margin="10dp">
            >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:src="@drawable/item_bg"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="60dp"
                        />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/crowd" />
                </RelativeLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crowd Detection"
                        android:layout_gravity="center"

                    android:textColor="@color/black"
                        android:layout_marginTop="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
            app:cardElevation="0dp"

            app:cardCornerRadius="20dp"
                android:layout_rowWeight="1"
                android:layout_margin="10dp">
            >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:src="@drawable/item_bg"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="60dp"
                        />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/service" />
                </RelativeLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Custmoer Services"
                        android:layout_gravity="center"

                    android:textColor="@color/black"
                        android:layout_marginTop="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>


</RelativeLayout>